					<TexCoords left="0.00390625" right="0.0664062" top="0.664062" bottom="0.976562"/>
				</Texture>
				<Texture name="$parentMiddle" parentKey="Middle" file="Interface\AddOns\WeakAuras\Media\Textures\CommonSearch">
