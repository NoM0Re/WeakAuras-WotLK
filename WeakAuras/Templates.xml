                    </Anchors>
                    <TexCoords left="0.00000000" right="1.00000000" top="0.0078125" bottom="0.34375"/>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                WA_PortraitFrameTemplate_Mixin(self);
            </OnLoad>
            <OnSizeChanged>
                WA_UpdateNineSliceBorders(self);
            </OnSizeChanged>
		</Scripts>
